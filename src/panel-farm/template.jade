.farm-wrapper
  .farm-nav
    each navItem in $helpers.NAV_ITEMS
      a(
        attrs={href: `#${navItem.view}`}
        class={'nav-selected': view === navItem.view}
      )= navItem.text

  //- linked child component, tag chosen dynamically
  .farm= $component.child(`view-${view}`)

  //- independent component
  //- this animal uses a bit of inline styling, for positioning
  //- which can be controlled by state updates
  animal-badge.background-animal(
    attrs={animal: backgroundAnimal}
    style=backgroundAnimalStyle
  )
